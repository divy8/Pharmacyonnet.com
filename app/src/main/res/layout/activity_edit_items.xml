<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f4"
    >


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<FrameLayout
    android:id="@+id/productimage"
    android:layout_marginTop="56dp"
  android:background="@drawable/rect"
    android:layout_width="match_parent"
    android:layout_height="279dp">


<ImageView
    android:layout_gravity="center"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:background="@drawable/girl"
    />



</FrameLayout>


<LinearLayout
    android:layout_below="@+id/productimage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/size"
    android:background="@drawable/rect"
    android:layout_marginTop="9dp"
    >
             <customfonts.MyTextView
                 android:layout_marginTop="16dp"
                 android:layout_gravity="center"

                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="SIZE"
                 android:textSize="@dimen/text"
                 android:textColor="@color/Tex"
                 android:layout_marginLeft="16dp"

        />

            <!--*********size**********-->

            <LinearLayout
                android:id="@+id/sizecircle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                >



                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    >



                    <customfonts.MyTextView
                        android:id="@+id/ss"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:text="S"
                        android:background="@drawable/sizeround1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Tex"

                        />
                    <customfonts.MyTextView
                        android:id="@+id/m"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:text="M"
                        android:background="@drawable/sizeround1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Tex"

                        />
                    <customfonts.MyTextView
                        android:id="@+id/l"

                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:text="L"
                        android:background="@drawable/sizeround1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Tex"

                        />
                    <customfonts.MyTextView
                        android:id="@+id/xl"

                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:text="XL"
                        android:background="@drawable/sizeround1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Tex"

                        />

                    <customfonts.MyTextView
                        android:id="@+id/xxl"

                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:text="XXL"
                        android:background="@drawable/sizeround1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Tex"

                        />
                </LinearLayout>
            </LinearLayout>
</LinearLayout>


            <!--*********color**********-->

    <LinearLayout
        android:layout_below="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/colour"
        android:background="@drawable/rect"
        android:layout_marginTop="9dp"
        >


    <customfonts.MyTextView
        android:id="@+id/colortext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COLOUR"
        android:textSize="@dimen/text"
        android:textColor="@color/Tex"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorcircle"
        android:layout_marginLeft="25dp"
        >


        <!--******YELLOW COLOUR**********-->
        <FrameLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:layout_margin="10dp"
            >




            <ImageView
                android:id="@+id/yellow1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/yellow1"
                android:layout_gravity="center"

                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/yellow2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/yellow2"
                android:layout_gravity="center"

                />
            </FrameLayout>


      <!--******BLUE COLOUR**********-->
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            >




            <ImageView
                android:id="@+id/blue1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/blue1"
                android:layout_gravity="center"

                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/blue2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/blue2"
                android:layout_gravity="center"

                />
        </FrameLayout>

        <!--******RED COLOUR**********-->
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            >



            <ImageView
                android:id="@+id/red1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/red1"
                android:layout_gravity="center"

                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/red2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/red2"
                android:layout_gravity="center"

                />

        </FrameLayout>


        <!--******GREEN COLOUR**********-->
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            >



            <ImageView
                android:id="@+id/green1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/green1"
                android:layout_gravity="center"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/green2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/green2"
                android:layout_gravity="center"

                />
        </FrameLayout>



    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/colour"
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"

        >

        <customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="@color/White"
            android:textSize="@dimen/text"
            android:background="@drawable/oneside_roundrect"
            android:paddingLeft="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="45dp"
            android:gravity="center"

            android:layout_gravity="right"
            />

    </LinearLayout>



</RelativeLayout>
    </ScrollView>



</RelativeLayout>
